{
    "compilerOptions": {
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error"
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}